#!/bin/bash

# Waybar custom module for personal Gmail unread count
# Adapted from i3-gmail-personal-unread
# Remove i3-specific BLOCK_BUTTON handling - waybar handles clicks via on-click

COUNT=`mu find flag:unread path:$HOME/.mail/iocanel@gmail.com/ | wc -l`
if [ "$COUNT" -gt 0 ]; then
    echo " $COUNT"
fi
#!/bin/bash

if systemctl --user is-active --quiet swayidle
then
	systemctl --user stop swayidle
        notify-send -a "Screensaver" -u "critical" "Disabled" "Swayidle disabled"
else
	systemctl --user start swayidle
        notify-send -a "Screensaver" -u "normal" "Enabled" "Swayidle successfully enabled"
fi

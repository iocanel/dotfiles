#!/bin/bash

#
# Uses swaylock-effects with enhanced visual effects
# Compatible with Wayland
swaylock \
    --image /home/iocanel/.local/share/images/unlock.png \
    --indicator-radius 200 \
    --indicator-thickness 20 \
    --ring-color b8693a \
    --key-hl-color 89b4fa \
    --line-color 00000000 \
    --inside-color 1e1e2ecc \
    --separator-color 00000000

#!/bin/bash

# Waybar custom module for GitHub unread count
# Adapted from i3-github-unread
# Remove i3-specific BLOCK_BUTTON handling - waybar handles clicks via on-click

COUNT=`mu find flag:unread from:github.com path:$HOME/.mail/iocanel@gmail.com/ | wc -l`
if [ "$COUNT" -gt 0 ]; then
    echo " $COUNT"
fi
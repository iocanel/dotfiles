{
    "layer": "bottom",
    "position": "bottom",
    "height": 50,
    "spacing": 4,
    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-center": [],
    "modules-right": [ "custom/gmail-personal", "custom/gmail-work", "custom/github", "tray", "custom/notifications", "clock", "custom/lock"],
    
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "format": "{name}",
        "format-icons": {
            "1": " ",
            "2": " ",
            "3": " ",
            "4": " ",
            "5": " ",
            "6": " ",
            "7": " ",
            "8": "8",
            "9": "9",
            "10": "10"
        }
    },
    
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },  

    "clock": {
        "format": "{:%A %d %B %Y %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "on-click": "org-agenda",
        "interval": 5
    },

    "custom/lock": {
      "format": "{}",
      "tooltip": "Left: Lock now, Right: Toggle auto-lock",
      "on-click": "screenlock-now",
      "on-click-right": "waybar-swayidle-toggle toggle && pkill -RTMIN+11 waybar",
      "interval": 5,
      "signal": 11,
      "exec": "waybar-swayidle-toggle",
      "tooltip": false
    }, 

    "custom/github": {
        "format": " {}",
        "exec": "waybar-github-unread",
        "interval": 10,
        "signal": 2,
        "tooltip": false,
        "on-click": "mu4e-github"
    },
    
    "custom/gmail-personal": {
        "format": " {}",
        "exec": "waybar-gmail-personal-unread",
        "interval": 10,
        "signal": 2,
        "tooltip": false,
        "on-click": "mu4e-personal"
    },
    
    "custom/gmail-work": {
        "format": " {}",
        "exec": "waybar-gmail-work-unread",
        "interval": 10,
        "signal": 2,
        "tooltip": false,
        "on-click": "mu4e-work"
    },
    
    "custom/notifications": {
        "format": "{}",
        "exec": "waybar-notifications-toggle",
        "tooltip": "Toggle notifications (Left: DND, Right: Panel)",
        "on-click": "waybar-notifications-toggle toggle && pkill -RTMIN+10 waybar",
        "on-click-right": "waybar-notifications-toggle panel",
        "interval": 5,
        "signal": 10,
        "tooltip": false
    },

    "tray": {
        "icon-size": 21,
        "spacing": 10
    }
}
